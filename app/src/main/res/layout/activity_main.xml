<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1B1B1B"

    android:backgroundTint="#1E1E1E"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/quiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-100sp"
        android:layout_marginBottom="50sp"
        android:gravity="center"
        android:paddingVertical="50sp"
        android:shadowColor="#E4DDC8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="1000"
        android:text="Quiz"
        android:textColor="@color/white"
        android:textSize="70sp"
        android:textStyle="bold" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="#FFFFFF"
        app:cardCornerRadius="30dp">

        <LinearLayout
            android:id="@+id/fullsc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#61A7DF"
            android:orientation="vertical">


            <TextView
                android:id="@+id/explore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:paddingVertical="15sp"
                android:shadowColor="@color/black"
                android:shadowRadius="80"
                android:text="Explore"
                android:textColor="?android:textColorPrimary"
                android:textSize="30sp"
                android:textStyle="bold" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tvNameParent"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="20dp"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tvName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:hint=" Enter Your Name"
                    android:inputType="textCapWords"
                    android:maxLength="20"
                    android:shadowColor="#0B0A0A"
                    android:textColor="@color/black"></com.google.android.material.textfield.TextInputEditText>

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btnStartQuiz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="20dp"
                android:background="@color/teal_200"
                android:backgroundTint="#00FFF7"
                android:shadowColor="#050505"
                android:text="Start Quiz"
                android:textColor="@color/white"
                android:textSize="15sp">

            </Button>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</LinearLayout>